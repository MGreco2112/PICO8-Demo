pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
	
--player table--	
	player={
		x=63,
		y=63,
		fx=false,
		fy=false,
		sp=1
	}
	
end

function _update()
--x plauer movement--
	if btn(➡️) then
	 player.x+=1
	 player.fx=false
	 player.fy=false
	 player.sp=1
	end
	
	if btn(⬅️) then
		player.x-=1
		player.fx=true
		player.fy=false
		player.sp=1
	end
	
--y player movement--	
	
	if btn(⬆️) then
		player.y-=1
		player.fy=false
		player.sp=2
	end
	
	if btn(⬇️) then
		player.y+=1
		player.fy=true
		player.sp=2
	end
end

function _draw()
	cls() --clear screen
	spr(player.sp,player.x,player.y,1,1,player.fx,player.fy) --draw sprite
	--sprite, xcor, ycor, xscale, yscale, xflip, yflip
end
