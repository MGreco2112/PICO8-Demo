pico-8 cartridge // http://www.pico-8.com
version 41
__lua__
function _init()
	sprite = 1
	stimer = 0
	ani_speed = 10
	first_frame = 1
	last_frame = 4
end

function _update()
	if stimer < ani_speed then
		stimer+=1
	else
		if sprite < last_frame then
			sprite += 1
		else
			sprite = first_frame
		end
		stimer=0
	end
	
end

function _draw()
	cls()
	spr(sprite,63,63)
end
