__lua__
function _init()
	sprite = 1
	stimer = 0
	ani_speed = 5
	first_frame = 1
	last_frame = 4
	
	player = {
		xcor = 63,
		ycor = 63
	}
end

function _update()
	if btn(⬅️) or btn(➡️) or btn(⬇️) or btn(⬆️) then
		if stimer < ani_speed then
			stimer+=1
		else
			if sprite < last_frame then
				sprite += 1
			else
				sprite = first_frame
			end
			stimer=0
		end
	end
	
	if btn(⬅️) then
		player.xcor -=1
	end
	
	if btn(➡️) then
		player.xcor += 1
	end
	
	if btn(⬆️) then
		player.ycor -= 1
	end
	
	if btn(⬇️) then
		player.ycor += 1
	end
end

function _draw()
	cls()
	map()
	spr(sprite,player.xcor,player.ycor)
end
