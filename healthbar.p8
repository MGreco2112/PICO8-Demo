function init_health()
	health=100
end

function update_health()
	if health > 0 then
		health-=.1
		barw=36*health/100
	end
end

function draw_health()
	rect(44,60,84,68,6)
	rectfill(46,62,46+barw,66,10)
	--x1,y1,x2,y2,color
	print(health)
end
