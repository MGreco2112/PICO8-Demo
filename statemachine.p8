function _init()
	state="menu"
end

function _update()
	if state=="play" then
		if (btnp(❎)) state="menu"
		
	elseif state=="menu" then
		if (btnp(❎)) state="play"
	end
	
end

function _draw()
	if state=="play" then
		cls(3)
		map()
	elseif state=="menu" then
		cls(6)
		print("press any btn to start",20,55,0)
	end
end
